<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.SplashActivity"
    android:backgroundTint="@color/white">


    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_130sdp"
        android:src="@drawable/ic_logo"
      />

    <ProgressBar
        android:id="@+id/progressOne"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@id/splashLogo"
        app:layout_constraintStart_toStartOf="@id/splashLogo"
        app:layout_constraintEnd_toEndOf="@id/splashLogo"
        android:indeterminateTint="@color/orange"
        />

    <ProgressBar
        android:id="@+id/progressTwo"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintTop_toTopOf="@id/progressOne"
        app:layout_constraintStart_toStartOf="@id/progressOne"
        app:layout_constraintEnd_toEndOf="@id/progressOne"
        app:layout_constraintBottom_toBottomOf="@id/progressOne"
        android:indeterminateTint="@color/orange"
        />
</androidx.constraintlayout.widget.ConstraintLayout>