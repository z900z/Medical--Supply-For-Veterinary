<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_shadow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="#BBD9FA"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_color"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_gray500"
        app:layout_constraintBottom_toBottomOf="@id/image_shadow"
        app:layout_constraintEnd_toEndOf="@id/image_shadow"
        app:layout_constraintStart_toStartOf="@id/image_shadow"
        app:layout_constraintTop_toTopOf="@id/image_shadow" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/image_color"
        app:layout_constraintEnd_toEndOf="@id/image_color"
        app:layout_constraintStart_toStartOf="@id/image_color"
        app:layout_constraintTop_toTopOf="@id/image_color"
        android:textSize="12sp"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>